    <!-- numbers button style -->
    <style name="number_button_style">
        <item name="android:background">@drawable/selector_no_buttons</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_numbers</item>
        <item name="android:textStyle">bold</item>
